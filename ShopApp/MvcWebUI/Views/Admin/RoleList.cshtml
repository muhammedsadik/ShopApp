@model IEnumerable<IdentityRole>


<div class="row">
  <div class="col-md-12">
    <h1 class="h3">Role List</h1>
    <hr>


    <a href="/admin/role/create" class="btn btn-primary btn-lg mb-2">Create Role</a>

    <table class="table table-bordered">
      <thead>
        <tr>
          <td style="width : 250px;">Id</td>
          <td>Role Name</td>
          <td style="width : 160px;"></td>
        </tr>
      </thead>
      <tbody>
        @if (Model.Count() > 0)
        {
          @foreach (var item in Model)
          {
            <tr>
              <td>@item.Id</td>
              <td>@item.Name</td>
              
              <td>
                <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm mr-2 ">Edit</a>

                <form action="/admin/role/delete" method="post" style="display:inline;">
                  <input type="hidden" name="RoleId" value="@item.Id">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>

              </td>
            </tr>
          }
        }
        else
        {
          <div class="alert alert-warning">
            <h3>No Roles</h3>
          </div>
        }
      </tbody>
    </table>
  </div>
</div>
