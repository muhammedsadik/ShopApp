@model UserDetailsModel

<h1 class="h3">Edit User</h1>
<hr>


<form asp-controller="Admin" asp-action="UserEdit" method="post">

  <div class="row">
    <div class="col-md-8">
      <input type="hidden" name="UserId" value="@Model.UserId">
      <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="FirstName"></label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="FirstName">
          @*<span asp-validation-for="Name" class="text-danger"></span>*@
        </div>
      </div>

      <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="LastName"></label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="LastName">
          @*<span asp-validation-for="Name" class="text-danger"></span>*@
        </div>
      </div>
      
      <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="UserName"></label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="UserName">
          @*<span asp-validation-for="Name" class="text-danger"></span>*@
        </div>
      </div>
      
      <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="Email">
          @*<span asp-validation-for="Name" class="text-danger"></span>*@
        </div>
      </div>

      <div class="form-group row mb-3">
        <div class="col-sm-10 offset-sm-2">
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      
        @foreach (var rolename in ViewBag.Roles)
        {
          <div class="form-check">
            <input class="form-check-input"
               type="checkbox"
               value="@rolename"
               name="selectedRoles"
               id="@rolename"
               @(Model.SelectedRoles.Any(i=>i==rolename)?"checked":"")>
          <label class="form-check-label" for="@rolename">
            @rolename
          </label>
          </div>
        }
      
      <hr>
      <div class="form-check">
        <input asp-for="EmailConfirmed" type="checkbox" class="form-check-input">
        <label asp-for="EmailConfirmed" class="form-check-label"></label>
      </div>

    </div>
  </div>

</form>


