@model ProductModel

<h1 class="h3">Product Edit</h1>
<hr>


<form asp-controller="Admin" asp-action="ProductEdit" method="post" enctype="multipart/form-data">


  <div class="row">
    <div class="col-md-8">
      <input type="hidden" name="ProductId" value="@Model.ProductId">
      <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="Name">
          @*<span asp-validation-for="Name" class="text-danger"></span>*@
        </div>
      </div>

      <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="Url"></label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="Url">
          @*<span asp-validation-for="Url" class="text-danger"></span>*@
        </div>
      </div>

      <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="Price"></label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="Price">
          @*<span asp-validation-for="Price" class="text-danger"></span>*@
        </div>
      </div>

      <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="Description"></label>
        <div class="col-sm-10">
          <textarea id="editor" class="form-control" asp-for="Description"></textarea>
          @*<span asp-validation-for="Description" class="text-danger"></span>*@
        </div>
      </div>

      <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="ImageUrl"></label>
        <div class="col-sm-10">
          <input type="hidden" asp-for="ImageUrl">
          <img src="~/img/@Model.ImageUrl" width="80" />
          <input type="file" name="file">
        </div>
      </div>

      <div class="form-group row mb-3">
        <div class="col-sm-10 offset-sm-2">
          <button type="submit" class="btn btn-primary">Save Product</button>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      @if (Model.SelectedCategories == null)
      {
        @foreach (var item in (List<Category>)ViewBag.Categories)
        {
          <div class="form-check">
            <input class="form-check-input"
               type="checkbox"
               value="@item.CategoryId"
               name="categoryIds"
               id="category_@(item.CategoryId)">
            <label class="form-check-label" for="category_@(item.CategoryId)">
              @item.Name
            </label>
          </div>
        }
      }
      else
      {
        @for (int i = 0; i < Model.SelectedCategories.Count; i++)
        {
          <input type="hidden" name="SelectedCategories[@i].CategoryId"
             value="@Model.SelectedCategories[@i].CategoryId">
          <input type="hidden" name="SelectedCategories[@i].Name"
             value="@Model.SelectedCategories[@i].Name">
        }
        @foreach (var item in (List<Category>)ViewBag.Categories)
        {
          <div class="form-check">
            <input class="form-check-input"
               type="checkbox"
               value="@item.CategoryId"
               name="categoryIds"
               id="category_@(item.CategoryId)"
               @(Model.SelectedCategories.Any(i=>i.CategoryId==item.CategoryId)?"checked":"")>
            <label class="form-check-label" for="category_@(item.CategoryId)">
              @item.Name
            </label>
          </div>
        }
      }



      <hr>

      <div class="form-check">
        <input asp-for="IsApproved" type="checkbox" class="form-check-input">
        <label asp-for="IsApproved" class="form-check-label"></label>
      </div>

      <div class="form-check">
        <input asp-for="IsHome" type="checkbox" class="form-check-input">
        <label asp-for="IsHome" class="form-check-label"></label>
      </div>

    </div>
  </div>
</form>



