@model IEnumerable<User>

@section Css
{

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" />
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap4.min.css" />
}

@section Scripts
  {
  <script src="~/jquery/jquery.min.js"></script>
  <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
  <script>
    let table = new DataTable('#myTable');
  </script>
}



<div class="row">
  <div class="col-md-12">
    <h1 class="h3">User List</h1>
    <hr>

    <a href="/admin/user/create" class="btn btn-primary btn-lg mb-2">Create User</a>
    <hr>
    <table id="myTable" class="table table-bordered" data-page-length='4'>
      <thead>
        <tr>
          <td style="width : 230px;">FirstName</td>
          <td style="width : 230px;">LastName</td>
          <td style="width : 230px;">UserName</td>
          <td style="width : 230px;">Email</td>
          <td style="width : 100px;">EmailConfirmed</td>
          <td style="width : 160px;">Status</td>
        </tr>
      </thead>
      <tbody>
        @if (Model.Count() > 0)
        {
          @foreach (var item in Model)
          {
            <tr class="@(item.EmailConfirmed?"":"bg-warning")">
              <td>@item.FirstName</td>
              <td>@item.LastName</td>
              <td>@item.UserName</td>
              <td>@item.Email</td>
              <td>@item.EmailConfirmed</td>

              <td>
                <a href="/admin/user/@item.Id" class="btn btn-primary btn-sm mr-2 ">Edit</a>

                <form action="/admin/user/delete" method="post" style="display:inline;">
                  <input type="hidden" name="UserId" value="@item.Id">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>

              </td>
            </tr>
          }
        }
        else
        {
          <div class="alert alert-warning">
            <h3>No Users</h3>
          </div>
        }
      </tbody>
    </table>
  </div>
</div>
