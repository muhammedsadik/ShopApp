@model ProductDetailModel


<div class="row">
  <div class="col-md-3">
    <img src="~/img/@Model.Product.ImageUrl" class="img-fluid">
  </div>
  <div class="col-md-9">
    <h1 class="mb-3">@Model.Product.Name</h1> <hr>

    @foreach (var item in Model.Categories)
    {
      <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
    }

    <div class="mb-3">
      <h4 class="text-primary mb-3">
        @Model.Product.Price <i class="fa-solid fa-turkish-lira-sign"></i>
      </h4>
      <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
        <input type="hidden" name="productId" value="@Model.Product.ProductId">
        <div class="input-group mb-3">
          <div style="width: 100px;">
            <input type="number" name="quantity" class="form-control" value="1" min="1" step="1">
          </div>
          <div class="input-group-append">
            <button type="submit" class="btn btn-primary">
              <i class="cke_table-faked-selection fa-cart-lus"></i>Add To Cart
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p class="p-3">@Model.Product.Description</p>
  </div>
</div>
